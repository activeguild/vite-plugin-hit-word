{
  "name": "simple-plugin-template",
  "version": "1.0.0",
  "description": "A typescript template for developing various plugins. Use esbuild.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rimraf dist && node -r esbuild-register ./tools/build.ts & tsc --emitDeclarationOnly",
    "eslint": "eslint '**/*.ts' --ignore-path .gitignore",
    "prettier": "prettier . --write",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activeguild/simple-plugin-template.git"
  },
  "author": "j1ngzoue",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/activeguild/simple-plugin-template/issues"
  },
  "homepage": "https://github.com/activeguild/simple-plugin-template#readme",
  "devDependencies": {
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "esbuild": "^0.14.42",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.3",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
